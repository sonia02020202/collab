@using TravelFoodCms.Models.ViewModels;

@model IEnumerable<OrderItemViewModel>

<div class="container">
    <div class="row mb-3">
        <div class="col-md-8">
            <h1 class="display-4">Order Items</h1>
        </div>
        <div class="col-md-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i> Create New Order Item
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No order items found. Start by creating a new order item!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Order ID</th>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Restaurant</th>
                        <th>User</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ItemId</td>
                            <td>@item.OrderId</td>
                            <td>@item.ItemName</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice.ToString("C")</td>
                            <td>@(item.Quantity * item.UnitPrice)</td>
                            <td>@item.RestaurantName</td>
                            <td>@item.UserName</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ItemId" class="btn btn-sm btn-outline-secondary" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ItemId" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ItemId" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
