@using TravelFoodCms.Models.ViewModels;

@model DestinationViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit Destination</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="DestinationId" />
                        <input type="hidden" asp-for="ImageUrl" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Location" class="control-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreatorUserId" class="control-label">Creator</label>
                            <select asp-for="CreatorUserId" class="form-control" asp-items="ViewBag.Users">
                                <option value="">-- Select Creator --</option>
                            </select>
                            <span asp-validation-for="CreatorUserId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Upload Image (Optional)</label>
                            <input type="file" name="ImageFile" class="form-control-file" />
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-2">
                                    <strong>Current Image:</strong>
                                    <img src="@Model.ImageUrl" alt="Current Image" style="max-width: 200px; margin-top: 10px;" />
                                </div>
                            }
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>